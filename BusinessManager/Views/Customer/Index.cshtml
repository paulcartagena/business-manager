@using BusinessManager.Models.ViewModels
@model List<BusinessManager.Models.Customer>
@{
    ViewData["Title"] = "Clientes";
}

<style>
    .customer-card {
        border-left: 4px solid #ec4899;
    }

    @@media (max-width: 768px) {
        .table-responsive {
            font-size: 0.875rem;
        }

        .btn-sm {
            padding: 0.25rem 0.4rem;
            font-size: 0.75rem;
        }
    }
</style>

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel
{
    Title = "Clientes",
    ButtonText = "Crear",
    ButtonUrl = "#",
    ButtonClass = "",
    ButtonId = "btnCreateCustomer",
    ButtonIcon = "bi bi-plus-square-fill"
})

<!-- Vista de TABLA para Desktop/Tablet -->
<div class="d-none d-md-block">
    <div class="table-responsive">
        <table class="table mt-2 table-striped table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th class="d-none d-lg-table-cell">Nombre de Contacto</th>
                    <th>Teléfono</th>
                    <th class="d-none d-lg-table-cell">Dirección</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td><strong>@customer.Name</strong></td>
                        <td class="d-none d-lg-table-cell">@customer.ContactName</td>
                        <td>@customer.Phone</td>
                        <td class="d-none d-lg-table-cell">@customer.Address</td>
                        <td class="text-end">
                            <a href="#" class="btn btn-sm btn-outline-dark btn-edit-customer" data-id="@customer.CustomerId" title="Editar">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Vista de CARDS para Móvil -->
<div class="d-md-none mt-3">
    @foreach (var customer in Model)
    {
        <div class="card mb-3 customer-card shadow-sm">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <h6 class="mb-1 fw-bold">@customer.Name</h6>
                        @if (!string.IsNullOrEmpty(customer.ContactName))
                        {
                            <small class="text-muted">
                                <i class="bi bi-person"></i> @customer.ContactName
                            </small>
                        }
                    </div>
                    <a href="#" class="btn btn-sm btn-outline-dark btn-edit-customer" data-id="@customer.CustomerId">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                </div>

                <div class="mt-2">
                    @if (!string.IsNullOrEmpty(customer.Phone))
                    {
                        <div class="mb-1">
                            <small class="text-muted">
                                <i class="bi bi-telephone"></i> @customer.Phone
                            </small>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(customer.Address))
                    {
                        <div>
                            <small class="text-muted">
                                <i class="bi bi-geo-alt"></i> @customer.Address
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center text-muted py-5">
            <i class="bi bi-people" style="font-size: 3rem;"></i>
            <p class="mt-2">No hay clientes registrados</p>
        </div>
    }
</div>

<div class="modal fade" id="customerModal" tabindex="-1" aria-labelledby="customerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/utils/modalManager.js" asp-append-version="true"></script>
}