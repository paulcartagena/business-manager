@model BusinessManager.Models.ViewModels.InventoryMovementViewModel

<div class="modal-header">
    <h5 class="modal-title" id="movementModalLabel">@ViewBag.ModalTitle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form id="movementForm" asp-action="@ViewBag.ActionName" asp-route-id="@Model.InventoryMovementId" method="post">
    <div class="modal-body">
        @Html.AntiForgeryToken()
        @if (Model != null && Model.InventoryMovementId != 0)
        {
            <input type="hidden" asp-for="InventoryMovementId" />
        }

        <div class="mb-3">
            <label asp-for="ProductId" class="form-label"></label>
            <select asp-for="ProductId" class="form-select" asp-items="@(ViewData["Products"] as SelectList)" id="productSelect">
                <option value="">Selecciona un Producto</option>
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
            <small class="text-muted d-block mt-1" id="stockInfo"></small>
        </div>

        <div class="mb-3">
            <label asp-for="MovementType" class="form-label"></label>
            <select asp-for="MovementType" class="form-select" asp-items="@(ViewData["MovementTypes"] as SelectList)">
                <option value="">Selecciona un Tipo</option>
            </select>
            <span asp-validation-for="MovementType" class="text-danger"></span>
        </div>

        <!-- Cantidad y Precio en la misma fila -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" min="1" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label"></label>
            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>

<script>
    if ($.validator && $.validator.unobtrusive) {
        $.validator.unobtrusive.parse("#movementForm");
    }
</script>