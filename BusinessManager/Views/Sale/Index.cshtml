@using BusinessManager.Models
@using BusinessManager.Models.ViewModels
@model List<Sale>
@{
    ViewData["Title"] = "Ventas";
}

<style>
    .sale-card {
        border-left: 4px solid #3b82f6;
    }

        .sale-card .badge {
            font-size: 0.75rem;
        }

    @@media (max-width: 768px) {
        .table-responsive {
            font-size: 0.875rem;
        }
    }
</style>

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel
{
    Title = "Ventas",
    ButtonText = "Nueva Venta",
    ButtonUrl = Url.Action("Create", "Sale"),
    ButtonClass = "",
    ButtonId = "btnNewSale",
    ButtonIcon = "bi bi-cart-plus-fill"
})

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Vista de TABLA para Desktop/Tablet -->
<div class="d-none d-md-block">
    <div class="table-responsive">
        <table class="table mt-2 table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Cliente</th>
                    <th>Fecha</th>
                    <th class="d-none d-lg-table-cell">Productos</th>
                    <th>Total</th>
                    <th class="d-none d-lg-table-cell">Usuario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sale in Model)
                {
                    <tr>
                        <td><strong>#@sale.SaleId</strong></td>
                        <td>@sale.Customer.Name</td>
                        <td>
                            <small>@sale.SaleDate.ToString("dd/MM/yyyy")</small>
                            <br />
                            <small class="text-muted">@sale.SaleDate.ToString("HH:mm")</small>
                        </td>
                        <td class="d-none d-lg-table-cell">
                            @foreach (var detail in sale.SaleDetails)
                            {
                                <span class="badge bg-info text-dark me-1">
                                    @detail.Product.Name (@detail.Quantity)
                                </span>
                            }
                        </td>
                        <td><strong class="text-primary">@sale.TotalAmount.ToString("C2")</strong></td>
                        <td class="d-none d-lg-table-cell">
                            <small class="text-muted">@sale.User.Name</small>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Vista de CARDS para Móvil -->
<div class="d-md-none mt-3">
    @foreach (var sale in Model)
    {
        <div class="card mb-3 sale-card shadow-sm">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <h6 class="mb-1">
                            <span class="badge bg-dark">#@sale.SaleId</span>
                            <strong class="ms-2">@sale.Customer.Name</strong>
                        </h6>
                        <small class="text-muted">
                            <i class="bi bi-calendar"></i> @sale.SaleDate.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    </div>
                    <h5 class="mb-0 text-primary">@sale.TotalAmount.ToString("C2")</h5>
                </div>

                <div class="mb-2">
                    <small class="text-muted d-block mb-1">Productos:</small>
                    @foreach (var detail in sale.SaleDetails)
                    {
                        <span class="badge bg-info text-dark me-1 mb-1">
                            @detail.Product.Name (@detail.Quantity)
                        </span>
                    }
                </div>

                <div class="pt-2 border-top">
                    <small class="text-muted">
                        <i class="bi bi-person"></i> @sale.User.Name
                    </small>
                </div>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center text-muted py-5">
            <i class="bi bi-receipt" style="font-size: 3rem;"></i>
            <p class="mt-2">No hay ventas registradas</p>
        </div>
    }
</div>