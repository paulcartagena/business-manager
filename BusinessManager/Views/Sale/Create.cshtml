@model BusinessManager.ViewModels.SaleViewModel
@{
    ViewData["Title"] = "Nueva Venta";
}

<style>
    .pos-container {
        min-height: calc(100vh - 120px);
        display: flex;
        flex-direction: column;
    }

    .pos-content {
        flex: 1;
    }

    .card-products {
        height: 100%;
        min-height: 400px;
    }

    .products-body {
        max-height: calc(100vh - 320px);
        overflow-y: auto;
    }
</style>

<div class="container-fluid pos-container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0"><i class="bi bi-cart-plus-fill text-success"></i> Punto de Venta</h4>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="Create" method="post" id="saleForm" class="pos-content">
        @Html.AntiForgeryToken()

        <div class="row g-3 h-100">
            <!-- Columna izquierda: Info -->
            <div class="col-md-3">
                <div class="card h-100">
                    <div class="card-body p-3">
                        <h6 class="card-title mb-3">Información</h6>

                        <div class="mb-2">
                            <label asp-for="CustomerId" class="form-label small mb-1"></label>
                            <select asp-for="CustomerId" class="form-select form-select-sm" asp-items="@(ViewData["Customers"] as SelectList)" required>
                                <option value="">Seleccionar...</option>
                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger small"></span>
                        </div>

                        <div class="mb-2">
                            <label asp-for="SaleDate" class="form-label small mb-1"></label>
                            <input asp-for="SaleDate" type="date" class="form-control form-control-sm" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label small mb-1"></label>
                            <textarea asp-for="Notes" class="form-control form-control-sm" rows="3"></textarea>
                        </div>

                        <div class="bg-light p-3 rounded mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="small">Items:</span>
                                <strong id="itemCount">0</strong>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Total:</span>
                                <h5 class="mb-0 text-success" id="totalAmount">$0.00</h5>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Columna derecha: Productos -->
            <div class="col-md-9">
                <div class="card card-products">
                    <div class="card-header bg-success text-white py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">Productos</h6>
                            <button type="button" class="btn btn-light btn-sm" id="btnAddProduct">
                                <i class="bi bi-plus-circle"></i> Agregar
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-3 products-body">
                        <div id="productsContainer">
                            <div class="text-center text-muted py-5" id="emptyMessage">
                                <i class="bi bi-cart-x" style="font-size: 2.5rem;"></i>
                                <p class="mt-2 mb-0">No hay productos agregados</p>
                                <small>Haz clic en "Agregar" para comenzar</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Data para JavaScript -->
<script id="saleFormData" type="application/json">
    {
        "products": @Html.Raw(Json.Serialize(ViewData["ProductPrices"])),
        "stock": @Html.Raw(Json.Serialize(ViewData["ProductStock"])),
        "productsOptions": "@Html.Raw(string.Join("", ((SelectList)ViewData["Products"]).Select(x => $"<option value='{x.Value}'>{x.Text}</option>")).Replace("\"", "\\\""))"
    }
</script>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/forms/saleForm.js" asp-append-version="true"></script>
}