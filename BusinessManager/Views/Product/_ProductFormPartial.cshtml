@model BusinessManager.Models.ViewModels.ProductViewModel

<div class="modal-header">
    <h5 class="modal-title" id="productModalLabel">@ViewBag.ModalTitle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="productForm" asp-action="@ViewBag.ActionName" asp-route-id="@Model.ProductId" method="post">
    <div class="modal-body">
        @Html.AntiForgeryToken()

        @if (Model != null && Model.ProductId != 0)
        {
            <input type="hidden" asp-for="ProductId" />
        }

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label"></label>
            <select asp-for="CategoryId" class="form-select" asp-items="@(ViewData["Categories"] as SelectList)">
                <option value="">Selecciona una Categoría</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UomId" class="form-label"></label>
            <select asp-for="UomId" class="form-select" asp-items="@(ViewData["Uoms"] as SelectList)">
                <option value="">Selecciona una Udm</option>
            </select>
            <span asp-validation-for="UomId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PurchasePrice" class="form-label"></label>
            <input asp-for="PurchasePrice" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="PurchasePrice" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SalePrice" class="form-label"></label>
            <input asp-for="SalePrice" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="SalePrice" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Stock" class="form-label"></label>
            <input asp-for="Stock" class="form-control" type="number" step="1" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <div class="form-check form-switch mb-3">
            <input class="form-check-input" type="checkbox" asp-for="IsActive">
            <label class="form-check-label" asp-for="IsActive">Activo</label>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>

<script>
    if ($.validator && $.validator.unobtrusive) {
        $.validator.unobtrusive.parse("#productForm");
    }
</script>