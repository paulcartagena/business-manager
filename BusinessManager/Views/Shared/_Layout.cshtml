<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Business Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BusinessManager.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        html, body {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            width: 100%;
            height: 100%;
        }

        body {
            display: flex;
            min-height: 100vh;
        }

        /* Botón hamburguesa para móvil */
        .navbar-toggler-custom {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1050;
            background-color: #334155;
            border: none;
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            display: none;
        }

            .navbar-toggler-custom i {
                font-size: 1.5rem;
            }

        /* Overlay oscuro cuando sidebar está abierto en móvil */
        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1040;
        }

            .sidebar-overlay.show {
                display: block;
            }

        .sidebar {
            width: 220px;
            background-color: #334155;
            padding-top: 1rem;
            border-right: 1px solid #475569;
            flex-shrink: 0;
            height: 100vh;
            position: fixed;
            z-index: 1045;
            overflow-y: auto;
            transition: transform 0.3s ease;
        }

            .sidebar a {
                display: block;
                color: #cbd5e1;
                padding: 0.75rem 1rem;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #475569;
                    color: #f1f5f9;
                }

        /* Estilos para el menú */
        .menu-item-with-submenu {
            display: block;
            color: #cbd5e1;
            padding: 0.75rem 1rem;
            text-decoration: none;
            cursor: pointer;
            position: relative;
        }

            .menu-item-with-submenu:hover {
                background-color: #475569;
                color: #f1f5f9;
            }

        .menu-arrow {
            float: right;
            transition: transform 0.3s ease;
            color: #94a3b8;
        }

            .menu-arrow.expanded {
                transform: rotate(90deg);
            }

        .submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
            background-color: #475569;
        }

            .submenu.show {
                max-height: 300px;
            }

            .submenu a {
                padding-left: 2rem;
                font-size: 0.9rem;
                background-color: transparent;
                color: #e2e8f0;
            }

                .submenu a:hover {
                    background-color: #64748b;
                    color: #f8fafc;
                }

        .main-content {
            margin-left: 220px;
            flex-grow: 1;
            padding: 1rem;
            overflow-x: hidden;
            padding-bottom: 80px;
            transition: margin-left 0.3s ease;
        }

        footer {
            position: fixed;
            bottom: 0;
            left: 220px;
            width: calc(100% - 220px);
            z-index: 10;
            padding: 0.5rem 1rem;
            background-color: #f1f5f9;
            border-top: 1px solid #cbd5e1;
            transition: left 0.3s ease, width 0.3s ease;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        table {
            overflow-x: auto;
        }

        .sidebar .text-center strong {
            color: #f8fafc;
        }

        /* === RESPONSIVE === */
        @@media (max-width: 768px) {
            .navbar-toggler-custom {
                display: block;
            }

            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.show {
                    transform: translateX(0);
                }

            .main-content {
                margin-left: 0;
                padding-top: 60px;
            }

            footer {
                left: 0;
                width: 100%;
            }

            .sidebar .text-center {
                padding-top: 50px;
            }
        }

        @@media (max-width: 576px) {
            .main-content {
                padding: 0.5rem;
                padding-top: 60px;
            }

            footer {
                font-size: 0.85rem;
                padding: 0.3rem 0.5rem;
            }

            .sidebar {
                width: 250px;
            }
        }
    </style>
</head>
<body>
    <!-- Botón hamburguesa para móvil -->
    <button class="navbar-toggler-custom" onclick="toggleSidebar()">
        <i class="bi bi-list"></i>
    </button>

    <!-- Overlay oscuro -->
    <div class="sidebar-overlay" id="sidebarOverlay" onclick="closeSidebar()"></div>

    <!-- Sidebar vertical -->
    <nav class="sidebar" id="sidebar">
        <div class="text-center mb-4">
            <strong>EntityFramework</strong>
        </div>
        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>

        <!-- Menú de Configuración -->
        <div class="menu-item-with-submenu" onclick="toggleSubmenu(this)">
            Configuración
            <i class="bi bi-chevron-right menu-arrow"></i>
        </div>
        <div class="submenu">
            <a asp-area="" asp-controller="User" asp-action="Index">Usuarios</a>
            <a asp-area="" asp-controller="Rol" asp-action="Index">Roles</a>
        </div>

        <!-- Menú de Inventario -->
        <div class="menu-item-with-submenu" onclick="toggleSubmenu(this)">
            Inventario
            <i class="bi bi-chevron-right menu-arrow"></i>
        </div>
        <div class="submenu">
            <a asp-area="" asp-controller="Product" asp-action="Index">Productos</a>
            <a asp-area="" asp-controller="Category" asp-action="Index">Categorías</a>
            <a asp-area="" asp-controller="Uom" asp-action="Index">U. de Medida</a>
            <a asp-area="" asp-controller="InventoryMovement" asp-action="Index">Mov. de Inventario</a>
        </div>

        <!-- Menú de Relaciones Comerciales -->
        <div class="menu-item-with-submenu" onclick="toggleSubmenu(this)">
            Relaciones
            <i class="bi bi-chevron-right menu-arrow"></i>
        </div>
        <div class="submenu">
            <a asp-area="" asp-controller="Supplier" asp-action="Index">Proveedores</a>
            <a asp-area="" asp-controller="Customer" asp-action="Index">Clientes</a>
        </div>

        <!-- Menú de Operaciones -->
        <div class="menu-item-with-submenu" onclick="toggleSubmenu(this)">
            Operaciones
            <i class="bi bi-chevron-right menu-arrow"></i>
        </div>
        <div class="submenu">
            <a asp-area="" asp-controller="Purchase" asp-action="Index">Compras</a>
            <a asp-area="" asp-controller="Sale" asp-action="Index">Ventas</a>
        </div>

        <!-- Menú de Reportes -->
        <div class="menu-item-with-submenu" onclick="toggleSubmenu(this)">
            Reportes
            <i class="bi bi-chevron-right menu-arrow"></i>
        </div>
        <div class="submenu">
            <a asp-area="" asp-controller="Product" asp-action="Index">Inventario</a>
            <a asp-area="" asp-controller="Category" asp-action="Index">Ventas</a>
            <a asp-area="" asp-controller="Category" asp-action="Index">Compras</a>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer class="border-top footer text-muted">
            <div class="container-fluid">
                &copy; 2025 - EntityFramework - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

    <script>
        function toggleSubmenu(element) {
            const submenu = element.nextElementSibling;
            const arrow = element.querySelector('.menu-arrow');

            if (submenu.classList.contains('show')) {
                submenu.classList.remove('show');
                arrow.classList.remove('expanded');
            } else {
                submenu.classList.add('show');
                arrow.classList.add('expanded');
            }
        }

        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebarOverlay');

            sidebar.classList.toggle('show');
            overlay.classList.toggle('show');
        }

        function closeSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebarOverlay');

            sidebar.classList.remove('show');
            overlay.classList.remove('show');
        }

        // Cerrar sidebar al hacer click en un enlace (solo en móvil)
        document.querySelectorAll('.sidebar a').forEach(link => {
            link.addEventListener('click', function() {
                if (window.innerWidth <= 768) {
                    closeSidebar();
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>