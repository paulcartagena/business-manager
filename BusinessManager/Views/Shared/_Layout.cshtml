<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Business Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BusinessManager.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        html, body {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            width: 100%;
            height: 100%;
        }

        body {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 220px;
            background-color: #334155; /* Slate 700 */
            padding-top: 1rem;
            border-right: 1px solid #475569; /* Slate 600 */
            flex-shrink: 0;
            height: 100vh;
            position: fixed;
        }

            .sidebar a {
                display: block;
                color: #cbd5e1; /* Slate 300 - texto claro */
                padding: 0.75rem 1rem;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #475569; /* Slate 600 para hover */
                    color: #f1f5f9; /* Slate 100 - texto más claro en hover */
                }

        /* Estilos para el menú desplegable */
        .menu-item-with-submenu {
            display: block;
            color: #cbd5e1; /* Slate 300 - texto claro */
            padding: 0.75rem 1rem;
            text-decoration: none;
            cursor: pointer;
            position: relative;
        }

            .menu-item-with-submenu:hover {
                background-color: #475569; /* Slate 600 para hover */
                color: #f1f5f9; /* Slate 100 - texto más claro en hover */
            }

        .menu-arrow {
            float: right;
            transition: transform 0.3s ease;
            color: #94a3b8; /* Slate 400 para la flecha */
        }

            .menu-arrow.expanded {
                transform: rotate(90deg);
            }

        .submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
            background-color: #475569; /* Slate 600 para submenu */
        }

            .submenu.show {
                max-height: 200px;
            }

            .submenu a {
                padding-left: 2rem;
                font-size: 0.9rem;
                background-color: transparent;
                color: #e2e8f0; /* Slate 200 para subopciones */
            }

                .submenu a:hover {
                    background-color: #64748b; /* Slate 500 para hover en submenu */
                    color: #f8fafc; /* Slate 50 - texto muy claro */
                }

        .main-content {
            margin-left: 220px;
            flex-grow: 1;
            padding: 1rem;
            overflow-x: hidden;
            padding-bottom: 80px;
        }

        footer {
            position: fixed;
            bottom: 0;
            left: 220px;
            width: calc(100% - 100px);
            z-index: 10;
            padding: 0.2rem 1rem;
            background-color: #f1f5f9; /* Slate 100 - hace eco del sidebar */
            border-top: 1px solid #cbd5e1; /* Slate 300 - más definido */
        }

        img {
            max-width: 100%;
            height: auto;
        }

        table {
            overflow-x: auto;
        }

        /* Estilo para el título del sidebar */
        .sidebar .text-center strong {
            color: #0d47a1; /* Azul oscuro para el título */
        }
    </style>
</head>
<body>
    <!-- Sidebar vertical -->
    <nav class="sidebar">
        <div class="text-center mb-4">
            <strong class="text-white-50">EntityFramework</strong>
        </div>
        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>

        <!-- Menú desplegable de Configuración -->
        <div class="menu-item-with-submenu" onclick="toggleSubmenu(this)">
            Configuración
            <i class="bi bi-chevron-right menu-arrow"></i>
        </div>
        <div class="submenu">
            <a asp-area="" asp-controller="User" asp-action="Index">Usuarios</a>
        </div>

        <!-- Menú desplegable de Inventario -->
        <div class="menu-item-with-submenu" onclick="toggleSubmenu(this)">
            Inventario
            <i class="bi bi-chevron-right menu-arrow"></i>
        </div>
        <div class="submenu">
            <a asp-area="" asp-controller="Product" asp-action="Index">Productos</a>
            <a asp-area="" asp-controller="Category" asp-action="Index">Categorías</a>
            <a asp-area="" asp-controller="Uom" asp-action="Index">U. de Medida</a>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - EntityFramework - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

    <script>
        function toggleSubmenu(element) {
            const submenu = element.nextElementSibling;
            const arrow = element.querySelector('.menu-arrow');

            if (submenu.classList.contains('show')) {
                submenu.classList.remove('show');
                arrow.classList.remove('expanded');
            } else {
                submenu.classList.add('show');
                arrow.classList.add('expanded');
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>