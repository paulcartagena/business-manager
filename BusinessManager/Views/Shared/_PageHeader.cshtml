@model BusinessManager.Models.ViewModels.PageHeaderViewModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">@Model.Title</h1>

    @if (!string.IsNullOrEmpty(Model.ButtonText))
    {
        <div>
            <a href="@Model.ButtonUrl"
               class="btn btn-primary @Model.ButtonClass"
               id="@Model.ButtonId">
                @if (!string.IsNullOrEmpty(Model.ButtonIcon))
                {
                    <i class="@Model.ButtonIcon me-2"></i>
                }
                @Model.ButtonText
            </a>
        </div>
    }
</div>