@model BusinessManager.Models.ViewModels.UomViewModel

<div class="modal-header">
    <h5 class="modal-title" id="uomModalLabel">@ViewBag.ModalTitle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="uomForm" asp-action="@ViewBag.ActionName" asp-route-id="@Model.UomId" method="post">
    <div class="modal-body">
        @Html.AntiForgeryToken()

        @if (Model != null && Model.UomId != 0)
        {
            <input type="hidden" asp-for="UomId" />
        }

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IsWeightUnit" class="form-label"></label>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="IsWeightUnit" value="true" id="isWeightUnitTrue">
                <label class="form-check-label" for="isWeightUnitTrue">
                    Peso
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="IsWeightUnit" value="false" id="isWeightUnitFalse">
                <label class="form-check-label" for="isWeightUnitFalse">
                    Conteo
                </label>
            </div>
            <span asp-validation-for="IsWeightUnit" class="text-danger"></span>
            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" asp-for="IsActive">
                <label class="form-check-label" asp-for="IsActive">Activo</label>
            </div>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>

<script>
    // Validación del lado del cliente 
    if ($.validator && $.validator.unobtrusive) {
        $.validator.unobtrusive.parse("#uomForm");
    }
</script>