@using BusinessManager.Models.ViewModels
@model List<BusinessManager.Models.User>

@{
    ViewData["Title"] = "Usuarios";
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel
{
    Title = "Usuarios",
    ButtonText = "Crear",
    ButtonUrl = "#",
    ButtonClass = "",
    ButtonId = "btnCreateUser",
    ButtonIcon = "bi bi-plus-square-fill"
})

<table class="table mt-2 table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Mail</th>
            <th>Rol</th>
            <th>Estado</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@Html.DisplayFor(n => user.Name)</td>
                <td>@Html.DisplayFor(n => user.Mail)</td>
                <td>@Html.DisplayFor(n => user.Rol.Name)</td>
                <td>@(user.IsActive == true ? "Activo" : "Inactivo")</td>
                <td class="text-end">
                    <a href="#" class="btn btn-sm btn-outline-dark me-1 btn-edit-user" data-id="@user.UserId" title="Editar">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/js/utils/modalManager.js" asp-append-version="true"></script>
}