@using BusinessManager.Models.ViewModels
@model List<BusinessManager.Models.User>
@{
    ViewData["Title"] = "Usuarios";
}

<style>
    .user-card {
        border-left: 4px solid #6366f1;
    }

        .user-card .badge {
            font-size: 0.85rem;
        }

    @@media (max-width: 768px) {
        .table-responsive {
            font-size: 0.875rem;
        }

        .btn-sm {
            padding: 0.25rem 0.4rem;
            font-size: 0.75rem;
        }
    }
</style>

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel
{
    Title = "Usuarios",
    ButtonText = "Crear",
    ButtonUrl = "#",
    ButtonClass = "",
    ButtonId = "btnCreateUser",
    ButtonIcon = "bi bi-plus-square-fill"
})

<!-- Vista de TABLA para Desktop/Tablet -->
<div class="d-none d-md-block">
    <div class="table-responsive">
        <table class="table mt-2 table-striped table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Mail</th>
                    <th>Rol</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <strong>@user.Name</strong>
                        </td>
                        <td>@user.Mail</td>
                        <td>
                            <span class="badge bg-primary">@user.Rol.Name</span>
                        </td>
                        <td class="text-end">
                            <a href="#" class="btn btn-sm btn-outline-dark btn-edit-user" data-id="@user.UserId" title="Editar">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Vista de CARDS para Móvil -->
<div class="d-md-none mt-3">
    @foreach (var user in Model)
    {
        <div class="card mb-3 user-card shadow-sm">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <h6 class="mb-1 fw-bold">@user.Name</h6>
                        <small class="text-muted">
                            <i class="bi bi-envelope"></i> @user.Mail
                        </small>
                    </div>
                    <span class="badge bg-primary">
                        @user.Rol.Name
                    </span>
                </div>

                <div class="d-flex justify-content-end mt-3">
                    <a href="#" class="btn btn-sm btn-outline-dark btn-edit-user" data-id="@user.UserId">
                        <i class="bi bi-pencil-fill"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center text-muted py-5">
            <i class="bi bi-people" style="font-size: 3rem;"></i>
            <p class="mt-2">No hay usuarios registrados</p>
        </div>
    }
</div>

<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/utils/modalManager.js" asp-append-version="true"></script>
}