@using BusinessManager.Models
@using BusinessManager.Models.ViewModels
@model List<Purchase>
@{
    ViewData["Title"] = "Compras";
}

<style>
    .purchase-card {
        border-left: 4px solid #22c55e;
    }

        .purchase-card .badge {
            font-size: 0.75rem;
        }

    @@media (max-width: 768px) {
        .table-responsive {
            font-size: 0.875rem;
        }

        .btn-sm {
            padding: 0.25rem 0.4rem;
            font-size: 0.75rem;
        }
    }
</style>

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel
{
    Title = "Compras",
    ButtonText = "Crear",
    ButtonUrl = "#",
    ButtonClass = "",
    ButtonId = "btnCreatePurchase",
    ButtonIcon = "bi bi-plus-square-fill"
})

<!-- Vista de TABLA para Desktop/Tablet -->
<div class="d-none d-md-block">
    <div class="table-responsive">
        <table class="table mt-2 table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Proveedor</th>
                    <th>Fecha</th>
                    <th class="d-none d-lg-table-cell">Productos</th>
                    <th>Total</th>
                    <th class="d-none d-lg-table-cell">Usuario</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var purchase in Model)
                {
                    <tr>
                        <td><strong>#@purchase.PurchaseId</strong></td>
                        <td>@purchase.Supplier.Name</td>
                        <td>@purchase.PurchaseDate.ToString("dd/MM/yyyy")</td>
                        <td class="d-none d-lg-table-cell">
                            @foreach (var detail in purchase.PurchaseDetails)
                            {
                                <span class="badge bg-secondary me-1">
                                    @detail.Product.Name (@detail.Quantity)
                                </span>
                            }
                        </td>
                        <td><strong class="text-success">@purchase.TotalAmount.ToString("C2")</strong></td>
                        <td class="d-none d-lg-table-cell">
                            <small class="text-muted">@purchase.User.Name</small>
                        </td>
                        <td class="text-end">
                            <a href="#" class="btn btn-sm btn-outline-dark btn-edit-purchase" data-id="@purchase.PurchaseId" title="Editar">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Vista de CARDS para Móvil -->
<div class="d-md-none mt-3">
    @foreach (var purchase in Model)
    {
        <div class="card mb-3 purchase-card shadow-sm">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <h6 class="mb-1">
                            <span class="badge bg-dark">#@purchase.PurchaseId</span>
                            <strong class="ms-2">@purchase.Supplier.Name</strong>
                        </h6>
                        <small class="text-muted">
                            <i class="bi bi-calendar"></i> @purchase.PurchaseDate.ToString("dd/MM/yyyy")
                        </small>
                    </div>
                    <a href="#" class="btn btn-sm btn-outline-dark btn-edit-purchase" data-id="@purchase.PurchaseId">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                </div>

                <div class="mb-2">
                    <small class="text-muted d-block mb-1">Productos:</small>
                    @foreach (var detail in purchase.PurchaseDetails)
                    {
                        <span class="badge bg-secondary me-1 mb-1">
                            @detail.Product.Name (@detail.Quantity)
                        </span>
                    }
                </div>

                <div class="d-flex justify-content-between align-items-center pt-2 border-top">
                    <small class="text-muted">
                        <i class="bi bi-person"></i> @purchase.User.Name
                    </small>
                    <h5 class="mb-0 text-success">@purchase.TotalAmount.ToString("C2")</h5>
                </div>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center text-muted py-5">
            <i class="bi bi-cart-x" style="font-size: 3rem;"></i>
            <p class="mt-2">No hay compras registradas</p>
        </div>
    }
</div>

<div class="modal fade" id="purchaseModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content"></div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/utils/modalManager.js" asp-append-version="true"></script>
    <script src="~/js/forms/purchaseForm.js" asp-append-version="true"></script>
}